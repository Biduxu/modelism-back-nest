// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  username String @unique
  email String @unique
  password String
  fullName String
  birthdate String 
  createdAt String
  imageProfile String?
  trains Train[]

  @@map("users")
}

model Train {
  id String @id
  manufacturer String 
  reference String
  description String
  model String
  railroad String
  number String?
  coverImage String?
  isActive Boolean
  createdAt String
  user User @relation(fields: [userId], references: [id])
  userId String

  @@map("trains")
}
